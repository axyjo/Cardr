<h1>Creating new deck</h1>

<% form_for(@deck) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :model_id %><br />
    <%= f.collection_select :model_id, @models, :id, :name %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', decks_path %>